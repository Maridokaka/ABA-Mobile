<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VirtualCardActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout

                android:id="@+id/ln4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical"
                android:padding="50sp">

                <ImageView
                    android:id="@+id/ig_view"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:tint="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_credit_card_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Virtual Card"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Type of Virtual Card"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ig_visa"
                            android:layout_width="180dp"
                            android:layout_marginStart="10dp"
                            android:layout_height="100dp"
                            android:src="@drawable/visa"/>
                        <ImageView
                            android:id="@+id/ig_mastercard"
                            android:layout_width="180dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="10dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/masterss"/>
                    </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_account"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="#E6E6E6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20sp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#7E7C7C"
                    android:src="@drawable/ic_account_balance_wallet_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:text="Savings Account with ATM facility"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 35850.32 USD"
                    android:textSize="14dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/colorCircle"/>
            </LinearLayout>
            <LinearLayout

                android:id="@+id/ln_email"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="#E6E6E6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20sp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:src="@drawable/aaaaaa"/>
                <EditText
                    android:id="@+id/ed_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your email"
                    android:background="@android:color/transparent"
                    android:inputType="textEmailAddress"
                    android:padding="5dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_phone"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="#E6E6E6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20sp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:tint="#7E7C7C"
                    android:src="@drawable/ic_phone_iphone_black_24dp"/>
                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="+85595360367"
                    android:textColor="@android:color/black"
                    android:background="@android:color/transparent"
                    android:inputType="phone"
                    android:padding="5dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ln_daily"
                    android:layout_width="329dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="#E6E6E6"
                    android:orientation="horizontal"
                    android:padding="20sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:tint="#7E7C7C"
                        android:src="@drawable/ic_monetization_on_black_24dp" />
                    <EditText
                        android:id="@+id/ed_limit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Daily purchase limit"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="5dp" />
                </LinearLayout>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:tint="#7E7C7C"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_info_outline_black_24dp"/>
            </LinearLayout>\
        </LinearLayout>
        <Button
            android:id="@+id/btn_issue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_alignParentBottom="true"
            android:text="issue now"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="20dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="100dp"/>
    </RelativeLayout>
</FrameLayout>